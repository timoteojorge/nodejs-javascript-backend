<html>
    <body>
        <div class='erros'>
            <%if(errosValidacao){%>
            <ul>
                <%for(var i=0; i<errosValidacao.length; i++){%>
                    <li><%=errosValidacao[i].param%>-<%=errosValidacao[i].msg%></li>
                <%}%>    
            </ul>        
            <%}%>    
        </div>
        <form action="/produtos" method="POST">
            <div>
                <label for="titulo">Título</label>
                <input type="text" id="titulo" name="titulo" value="<%=produto.titulo%>" placeholder="Coloque o titulo do livro"/>
            </div>
            <div>
                <label for="preco">Preço</label>
                <input type="text" id="preco" name="preco" value="<%=produto.preco%>" placeholder="150.42"/>
            </div>
            <div>
                <label for="descricao">Descrição</label>
                <textarea cols="20" rows="10" id="descricao" name="descricao" placeholder="Coloque o titulo do livro"><%=produto.descricao%></textarea>
            </div>
            <input type="submit" value="gravar">
        </form>
    </body>
</html>